	keywords = {Astrophysics - Solar and Stellar Astrophysics, planet-star interactions, stars: coronae, stars: magnetic field},
	pages = {67},
	file = {cohen2011dynamics.pdf:/home/ekaterina/Documents/004_studies/Literature/Papers/Cohen/cohen2011dynamics.pdf:application/pdf},
}


